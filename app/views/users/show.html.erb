<div class ="banner">
    <h1 class ="display-4">User Profile</h1>
</div>

<div class = "container" style ="margin-top: 30px">
    <h2>Naem: <%= @user.title %></h2>
    <h2>Description: <%= @user.profile %></h2>
    <h2>Email: <%= @user.email %></h2>
</div>

<div class ="container" style ="margin-top: 30px">
    <div class ="row" style="margin-top: 2em;">
        <div class ="d-flex flex-wrap">
            <% @lairs.each do |lair| %>
            <div class ="card m-5"  style="width: 300px;">    
            <p> Name: <%= lair.name %> </p> 
            <p> Description : <%= lair.description %> </p> 
            <p> Address: <%= lair.address %> </p>
            <p> Price: $ <%= lair.price_per_night %> </p>
            <%= link_to "Go back to previous page", :back , class: "btn btn-info"  %>
                </div>
            </div>
            <% end %>
        </div>
    </div>
</div>
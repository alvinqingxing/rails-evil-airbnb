<h1>Lairs#show</h1>
<p>Find me in app/views/lairs/show.html.erb</p>
<h2><%= @lair.name %></h2>
<p><%= @lair.description %></p>
<p><%= @lair.address %></p>
<p>$<%= '%.2f' % @lair.price_per_night %></p>
<p>Owned By:<%= @lair.user.name %></p>
<hr>
<div id="booking-form">
  <%= simple_form_for([@lair, Booking.new]) do |f| %>
    <div class="form-row">
      <%= f.input :start_date, as: :string, input_html: {type: :date, id: 'start-date'} %>
    </div>
    <div class="form-row">
      <%= f.input :end_date, as: :string, input_html: {type: :date, id: 'end-date'} %>
    </div>
    <%= f.button :submit, 'BOOK THIS LAIR', class: 'btn btn-primary' %>
  <% end %>
</div>
<hr>
<div id="booking-info">
<div id="total-nights">
</div>
<div id="total-price">
</div>
</div>

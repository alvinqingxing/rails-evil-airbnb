<div class="container">
  <h1>Book a Lair</h1>
  <hr>
  <div id="booking-info">
    <strong>You're making a booking for:</strong> <%= @booking.lair.name %> <br>
    <strong>Lair of:</strong> <%= @booking.lair.user.title %> <br>
  </div>
  <hr>
  <div id="booking-form">
  <%= simple_form_for @booking do |f| %>
  <%= f.input :username, input_html: { class: 'special' } %>
  <%= f.input :password, input_html: { maxlength: 20 } %>
  <%= f.input :remember_me, input_html: { value: '1' } %>
  <%= f.button :submit %>
  <% end %>
  </div>
</div>

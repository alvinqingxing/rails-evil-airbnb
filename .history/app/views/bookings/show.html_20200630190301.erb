  <div id="booking-info">
    <strong>Lair Booked:</strong> <%= @booking.lair.name %> <br>
    <strong>Lair Owner:</strong> <%= @booking.lair.user.title %> <br>
    <strong>Start Date:</strong> <%= @booking.start_date %> <br>
    <strong>End Date:</strong> <%= @booking.end_date %>
    <hr>
    <strong>Total Days:</strong> <%= @booking.end_date - @booking.start_date %> <br>
  </div>
  <hr>
  <div id="booking-form">
  <%= simple_form_for lair_bookings_url do |f| %>
  <div class="form-row">
  <%= f.input :start_date, as: :string, input_html: {type: :date} %>
  <%= f.input :end_date, as: :string, input_html: {type: :date} %>
  </div>
  <%= f.button :submit, 'Book this lair', class: 'btn btn-primary' %>
  <% end %>
  </div>
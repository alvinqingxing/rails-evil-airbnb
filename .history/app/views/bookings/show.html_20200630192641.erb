  <div id="booking-info d-flex col-6">
    <strong>Lair Booked:</strong> <%= @booking.lair.name %> <br>
    <strong>Lair Owner:</strong> <%= @booking.lair.user.title %> <br>
    <strong>Booking User:</strong> <%= @booking.user.title %> <br>
    <strong>Start Date:</strong> <%= @booking.start_date %> <br>
    <strong>End Date:</strong> <%= @booking.end_date %>
    <hr>
    <strong>Total Days:</strong> <%= @days %> <br>
    <strong>Total Price:</strong> $<%= '%.2f' % @total_price %> <br>
    <strong>Current Status:</strong> <%= @booking.status %> <br>
    <hr>
    <div class="d-flex col-6 justify-content-around">
    <%= simple_form_for(@booking, as: :booking, method: :get, url: reject_booking_path) do |f| %>
      <%= f.submit 'CANCEL BOOKING', class: 'btn btn-danger' %>
    <% end %>
    <%= simple_form_for(@booking, as: :booking, method: :get, url: accept_booking_path) do |f| %>
      <%= f.submit 'ACCEPT BOOKING', class: 'btn btn-success' %>
    <% end %>
    </div>
  </div>